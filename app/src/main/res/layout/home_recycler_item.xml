<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:orientation="horizontal"
    tools:context=".ui.Activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile_home_rv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title_home_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="제목테스트"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_address_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_home_rv"
            android:layout_marginTop="8dp"
            android:text="주소 테스트"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:layout_below="@id/tv_address_home_tv"
            android:id="@+id/tv_price_home_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="15000원"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_heart_home_rv"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text="5"
            android:layout_below="@id/tv_price_home_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/heart_50px"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/tv_heart_home_rv"
            android:id="@+id/iv_heart_image"
            android:layout_alignTop="@id/tv_heart_home_rv"
            android:layout_width="13dp"
            android:layout_height="13dp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/iv_heart_image"
            android:id="@+id/tv_reply_home_rv"
            android:layout_marginRight="12dp"
            android:text="5"
            android:layout_below="@id/tv_price_home_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/reply_50px"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/tv_reply_home_rv"
            android:layout_alignTop="@id/tv_heart_home_rv"
            android:layout_width="13dp"
            android:layout_height="13dp"/>
    </RelativeLayout>

</LinearLayout>